{
    "extends": "eslint:recommended",
    "env": {
        "es2022": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
        "eol-last": ["error", "always"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
        "curly": ["error", "all"],
        "linebreak-style": ["error", "unix"]
    }
}
